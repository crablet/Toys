<Page
    x:Class="LearnUWPCSharp.TasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnUWPCSharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <Button Content="删除任务" 
                Click="DeleteTask"
                x:Name="deleteTask"/>
        <Button Content="添加任务"
                Click="AddNewTask"
                x:Name="addNewTask"
                RelativePanel.RightOf="TimePicker"/>
        <DatePicker x:Name="DatePicker"
                    DateChanged="AddNewDate"
                    RelativePanel.RightOf="deleteTask"/>
        <TimePicker x:Name="TimePicker"
                    TimeChanged="AddNewTime"
                    RelativePanel.RightOf="DatePicker"
                    RelativePanel.AlignBottomWith="DatePicker"
                    Margin="-3, 0, 0, 0"/>
        <ListView RelativePanel.Below="DatePicker"
                  ItemsSource="{Binding Path=Dates}" DisplayMemberPath="MyDate"
                  SelectedItem="{Binding Path=SelectedTask, Mode=TwoWay}"/>
    </RelativePanel>
</Page>
